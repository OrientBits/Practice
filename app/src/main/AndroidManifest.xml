        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".NavDrawer.QuizFactory"
            android:label="@string/quiz_factory"
            android:parentActivityName=".NavDrawer.QuizFactory" />
