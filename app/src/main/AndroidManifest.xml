<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lequiz.practice">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".module.Practise"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.OnBoarding" />
        <activity android:name=".activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.androidtutorialpoint.androidobservablescrollview" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MathematicsActivity"
            android:label="@string/mathematics"
            android:parentActivityName=".activity.MathematicsActivity" />
        <activity
            android:name=".activity.ReasoningActivity"
            android:label="@string/reasoning"
            android:parentActivityName=".activity.ReasoningActivity" />
        <activity
            android:name=".activity.EntertainmentActivity"
            android:label="@string/entertainment"
            android:parentActivityName=".activity.EntertainmentActivity" />
        <activity
            android:name=".activity.TechnologyActivity"
            android:label="@string/technology"
            android:parentActivityName=".activity.TechnologyActivity" />
        <activity
            android:name=".activity.CurrentAffairsActivity"
            android:label="@string/current_Affairs"
            android:parentActivityName=".activity.CurrentAffairsActivity" />
        <activity
            android:name=".activity.ComputerActivity"
            android:label="@string/computer"
            android:parentActivityName=".activity.ComputerActivity" />
        <activity
            android:name=".activity.GeneralScienceActivity"
            android:label="@string/general_science"
            android:parentActivityName=".activity.GeneralScienceActivity" />
        <activity
            android:name=".activity.EnglishActivity"
            android:label="@string/english"
            android:parentActivityName=".activity.EnglishActivity" />
        <activity
            android:name=".activity.SportsActivity"
            android:label="@string/sports"
            android:parentActivityName=".activity.SportsActivity" />
        <activity
            android:name=".activity.SpecialActivity"
            android:label="@string/special"
            android:parentActivityName=".activity.SpecialActivity" />
        <activity
            android:name=".nav_drawer.ProfileActivity"
            android:parentActivityName=".nav_drawer.ProfileActivity" />
        <activity
            android:name=".nav_drawer.NavLeaderboard"
            android:label="@string/leaderboard"
            android:parentActivityName=".nav_drawer.NavLeaderboard" />
        <activity
            android:name=".nav_drawer.NavNotifications"
            android:label="@string/notifications"
            android:parentActivityName=".nav_drawer.NavNotifications" />
        <activity
            android:name=".nav_drawer.NavPayment"
            android:label="@string/payment"
            android:parentActivityName=".nav_drawer.NavPayment" />
        <activity
            android:name=".nav_drawer.NavSettings"
            android:label="@string/settings"
            android:parentActivityName=".nav_drawer.NavSettings" />
        <activity
            android:name=".nav_drawer.NavInviteFriends"
            android:label="@string/invite_friends"
            android:parentActivityName=".nav_drawer.NavInviteFriends"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".nav_drawer.QuizFactory"
            android:label="@string/quiz_factory"
            android:parentActivityName=".nav_drawer.QuizFactory" />
        <activity android:name=".activity.RegisterUser" />
        <activity
            android:name=".activity.Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.WebViewLayout" />
        <activity android:name=".nav_drawer.JobAlertsActivity"
            android:parentActivityName=".nav_drawer.JobAlertsActivity"
            android:label="@string/job_alerts">
        </activity>
    </application>

</manifest>