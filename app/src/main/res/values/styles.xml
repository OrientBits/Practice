<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="category_card_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="category_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>

    </style>


    <style name="MyCustomToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
    </style>


    <style name="MyCustomPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="android:background">#031f3b</item>-->
        <!--<item name="android:textColorPrimary">@color/colorPrimary</item>-->
    </style>



</resources>
