<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >



    <item android:id="@android:id/background">

        <shape>

            <gradient

                android:angle="-90"

                android:endColor="@color/grayOnProgressHome"

                android:startColor="@color/grayOnProgressHome" />

        </shape>

    </item>

    <item android:id="@android:id/progress">

        <clip>

            <shape>

                <gradient

                    android:angle="90"

                    android:endColor="@color/skyBlueOnProgressHome"

                    android:startColor="@color/darkBlueOnProgressHome" />

            </shape>

        </clip>

    </item>



</layer-list>