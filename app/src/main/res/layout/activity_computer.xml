<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background_computer"
    android:fitsSystemWindows="false"
    tools:context=".ComputerActivity">

    <include
        android:id="@+id/computer_toolbar"
        layout="@layout/category_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="322dp"
        android:layout_height="187dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/computer"
        android:src="@drawable/computer_background_image" />

    <TextView
        android:id="@+id/heading_on_computer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="99dp"
        android:text="@string/computer"
        android:theme="@style/Topic_Text_Style"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/subheading_on_computer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading_on_computer"
        android:layout_marginStart="16dp"
        android:text="@string/subHeadingOnLearnSection"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            app:cardCornerRadius="75dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/book_image"
                tools:ignore="ContentDescription" />

        </android.support.v7.widget.CardView>


        <ImageView
            android:layout_width="55dp"
            android:layout_height="70dp"
            android:src="@drawable/down_arrow"
            tools:ignore="ContentDescription" />

        <android.support.v7.widget.CardView
            android:id="@+id/start_CardView_of_computer_quiz"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:elevation="5dp"
            app:cardCornerRadius="75dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/play_quiz_image"
                tools:ignore="ContentDescription" />

        </android.support.v7.widget.CardView>


    </LinearLayout>


