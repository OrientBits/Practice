<?xml version="1.0" encoding="utf-8"?>
<com.loopeer.shadow.ShadowView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/job_alert_row"
    app:backgroundColor="#fff"
    app:cornerRadiusBL="15dp"
    app:cornerRadiusBR="15dp"
    app:cornerRadiusTR="15dp"
    app:cornerRadiusTL="15dp"
    app:shadowColor="#960daaaa"
    app:shadowMarginBottom="6dp"
    app:shadowMarginLeft="6dp"
    app:shadowMarginRight="6dp"
    app:shadowMarginTop="0.7dp"
    app:shadowRadius="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/job_title_on_card_view_jobs"
            android:text="Opens a vacancy"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/violet_on_job_alert"
            android:layout_below="@+id/job_title_on_card_view_jobs"
            android:id="@+id/apply_online_text_view_on_jobs"
            android:text="Apply Online"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26.11.18 - "
            android:layout_below="@+id/job_title_on_card_view_jobs"
            android:textColor="@color/violet_on_job_alert"
            android:textSize="12sp"
            android:layout_toStartOf="@+id/job_ending_date"
            android:id="@+id/job_starting_date"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="26.11.18"
            android:textColor="@color/violet_on_job_alert"
            android:textSize="12sp"
            android:layout_below="@+id/job_title_on_card_view_jobs"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"

            android:id="@+id/job_ending_date"
            android:layout_marginTop="10dp"/>




    </RelativeLayout>


    </com.loopeer.shadow.ShadowView>

