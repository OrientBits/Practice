<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NavSettings">

   <include
       android:id="@+id/nav_settings_toolbar"
       layout="@layout/toolbar_on_setting"/>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="15dp"
                android:text="@string/ACCOUNT"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:background="@color/grayOnProgressHome" />

            <TextView
                android:id="@+id/edit_profile_on_settings"
                style="@style/settingsTextViewOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile" />

            <TextView
                style="@style/settingsTextViewOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Change_Password" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="24dp"
                android:text="@string/SYSTEM"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:background="@color/grayOnProgressHome" />

            <!--this is for push notifications -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:clickable="false"
                    android:text="@string/Push_notifications"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />

                <Switch
                    android:id="@+id/switchOnPushNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp" />
            </RelativeLayout>

            <!--this is for Night mode-->
            <LinearLayout
                android:id="@+id/night_mode_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ripple_text_view_settings"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="12dp"
                android:paddingEnd="0dp"
                android:paddingStart="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Night_Mode"
                    android:textSize="16sp"

                    />

                <TextView
                    android:id="@+id/on_off_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/On" />
            </LinearLayout>

            <!--this is for sound-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Sound"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Enable_in_app_sounds" />

                </LinearLayout>

                <Switch
                    android:id="@+id/switchOnSound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp" />

            </RelativeLayout>

            <!--this is for language chooser-->
            <LinearLayout
                android:id="@+id/language_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ripple_text_view_settings"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="12dp"
                android:paddingEnd="0dp"
                android:paddingStart="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Language"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/hindi_english_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/english" />
            </LinearLayout>

            <TextView
                style="@style/settingsTextViewOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Terms_of_use" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:background="@color/grayOnProgressHome" />

            <TextView
                style="@style/settingsTextViewOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/sign_out" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
