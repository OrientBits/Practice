<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="16dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="PROFILE DETAILS"/>
                <ImageView
                    android:layout_width="50dp"
                    android:id="@+id/save_right_on_edit_profile"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/right_sign_on_edit_profile"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/first_name_on_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:drawableStart="@drawable/profile_name"
                    android:drawablePadding="12dp"
                    android:hint="First Name"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="12dp"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/last_name_on_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:drawableStart="@drawable/profile_name"
                    android:drawablePadding="12dp"
                    android:hint="Last Name"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="12dp"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/status_on_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:drawableStart="@drawable/ic_status_icon_ediit_profile"
                    android:drawablePadding="12dp"
                    android:hint="Status"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="11dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="12dp"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edit_fancy_name_f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/dialog_fancy_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:drawableStart="@drawable/profile_fancy_name"
                    android:drawablePadding="12dp"
                    android:hint="Fancy Name"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="12dp"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/email_on_profile_edit_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:drawableStart="@drawable/profile_email"
                    android:drawablePadding="12dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="12dp"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />
            </android.support.design.widget.TextInputLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="8dp"
                android:paddingEnd="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/profile_gender" />

                <Spinner
                    android:id="@+id/gender_spinner_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#fff"
                    android:spinnerMode="dialog" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:background="@color/grayOnLearnSectionText" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:drawableStart="@drawable/profile_location"
                    android:drawablePadding="12dp"
                    android:hint="Location"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="12dp"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/date_of_birth_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="20dp"
                android:clickable="true"
                android:drawableStart="@drawable/profile_birthday"
                android:drawablePadding="12dp"
                android:focusable="true"
                android:foreground="@drawable/ripple_text_view_settings"
                android:hint="Date of Birth"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="14dp"
                android:background="@color/grayOnLearnSectionText"
                android:layout_marginBottom="20dp"/>


        </LinearLayout>

    </android.support.design.card.MaterialCardView>
    </android.support.design.widget.CoordinatorLayout>

