<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/header_part_1"
    android:orientation="vertical"
    tools:showIn="@layout/activity_home_app_bar">

    <GridLayout
        android:id="@+id/Category_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="5dp"
        tools:ignore="UselessParent">


        <!--row 1-->
        <com.loopeer.shadow.ShadowView
            android:id="@+id/current_affairs_card_view"
            style="@style/shadow_view_element"
            app:backgroundColor="#fff"
            app:cornerRadiusBL="20dp"
            app:cornerRadiusBR="20dp"
            app:shadowColor="#511faaf1"
            app:shadowMarginBottom="10dp"
            app:shadowMarginLeft="9dp"
            app:shadowMarginRight="9dp"
            app:shadowRadius="20dp">

            <LinearLayout
                style="@style/shadow_linear_layout"
                app:layout_gravity="center">

                <ImageView
                    style="@style/shadow_image_view"
                    android:background="@drawable/home_current_affairs" />

                <TextView
                    style="@style/shadow_text_view"
                    android:text="@string/current_Affairs"
                    android:textColor="#20a8f1" />

            </LinearLayout>

        </com.loopeer.shadow.ShadowView>

        <com.loopeer.shadow.ShadowView
            android:id="@+id/computer_card_view"
