<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="80dp">

    <android.support.v7.widget.CardView
        android:id="@+id/current_affairs_card_view"
        style="@style/HomeCardView"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/category_image"
                style="@style/ImageViewOnCardView"
                android:contentDescription="@string/current_Affairs"
                android:scaleType="fitXY"
                android:src="@drawable/current_affairs" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/category_text_view"
            style="@style/TextViewOfCardView"
            android:text="@string/current_Affairs"
            android:padding="6dp"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>