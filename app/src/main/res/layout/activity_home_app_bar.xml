<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?actionBarSize"
        android:scrollbars="none"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/relative_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/header_part_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="none">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/header_background_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_home_corner"
                    app:layout_collapseMode="parallax" />

                <LinearLayout
                    android:id="@+id/profile_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    app:layout_collapseMode="parallax">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_home"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:elevation="0.5dp"
                        android:focusable="true"
                        android:padding="3dp"
                        android:src="@drawable/default_image_loading"
                        app:civ_border_color="@android:color/white"
                        app:civ_border_width="6dp"  />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/wishing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="1dp"
                            tools:text="Good Morning"
                            android:textColor="#028be1"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/trebuchet_ms"
                            android:padding="1dp"
                            android:text="@string/user_first_name"
                            android:textColor="#006AA2"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>  <!-- image sample-->

           <include layout="@layout/activity_home_scrolling_content"/>

        </RelativeLayout>

    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

    <include layout="@layout/toolbar_layout"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:itemTextColor="@drawable/bottom_nav_item_selector"
        app:menu="@menu/bottom_navigation_menu">



    </android.support.design.widget.BottomNavigationView>

</FrameLayout>