<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?actionBarSize"
        android:scrollbars="none"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/relative_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/header_part_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="none">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/header_background_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_design_image1"
                    app:layout_collapseMode="parallax" />

                <LinearLayout
                    android:id="@+id/profile_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    app:layout_collapseMode="parallax">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_home"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:elevation="0.5dp"
                        android:focusable="true"
                        android:padding="3dp"
                        android:src="@drawable/ramshek"
                        app:civ_border_color="@android:color/white"
                        app:civ_border_width="6dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/wishing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="1dp"
                            tools:text="Good Morning"
                            android:textColor="#028be1"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/trebuchet_ms"
                            android:padding="1dp"
                            android:text="@string/user_first_name"
                            android:textColor="#006AA2"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>  <!-- image sample-->

           <include layout="@layout/activity_home_scrolling_content"/>

        </RelativeLayout>

    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>


    <RelativeLayout
        android:id="@+id/home_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center_vertical">

        <!--rounded cardView -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:foreground="?selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="8.8dp"
                android:layout_marginBottom="9dp"
                app:cardCornerRadius="19dp"
                app:cardElevation="2dp" />

            <android.support.v7.widget.CardView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="end"
                android:foreground="?selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginEnd="9dp"
                android:layout_marginTop="8.8dp"
                android:layout_marginBottom="9dp"
                app:cardCornerRadius="19dp"
                app:cardElevation="2dp" />

        </FrameLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:paddingStart="0dp"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
            app:theme="@style/ThemeOverlay.AppCompat.Dark" />

    </RelativeLayout>



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation_play_random_quiz"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        android:elevation="10dp">

        <FrameLayout
            android:id="@+id/play_random_frameLayout"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/play_random_quiz_background_final"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Play Random Quiz"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="normal"
                tools:ignore="HardcodedText" />

        </FrameLayout>

    </android.support.design.widget.BottomNavigationView>

</FrameLayout>