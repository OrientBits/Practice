<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="15dp"
            android:paddingStart="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:id="@+id/profile_image_in_payment_ImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/nav_header_desc"
                android:src="@drawable/mithlesh" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginEnd="90dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_toEndOf="@id/profile_image_in_payment_ImageView"
                android:padding="2dp">

                <TextView
                    android:id="@+id/user_name_in_payment_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:text="@string/user_name"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/total_xp_in_payment_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XP reached = 27000"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/date_of_getting_prize_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wed, 8 Aug"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <TextView
                android:id="@+id/prize_amount_in_Payment_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                tools:ignore="HardcodedText,RelativeOverlap"
                android:textColor="@color/green"
                android:textSize="20sp"
                tools:text="â‚¹ 10000/-" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>