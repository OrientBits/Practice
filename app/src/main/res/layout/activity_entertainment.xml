<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_entertainment"
    android:fitsSystemWindows="false"
    tools:context=".EntertainmentActivity">

    <include
        android:id="@+id/entertainment_toolbar"
        layout="@layout/category_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="322dp"
        android:layout_height="187dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/entertainment"
        android:src="@drawable/entertainment_background_image" />

    <TextView
        android:id="@+id/heading_on_entertainment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="99dp"
        android:text="@string/entertainment"
        android:theme="@style/Topic_Text_Style"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/subheading_on_entertainment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading_on_entertainment"
        android:layout_marginStart="16dp"
        android:text="@string/subHeadingOnLearnSection"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/relative_card_view_entertainment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subheading_on_entertainment"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_layout_learn_entertainment"
        android:elevation="2dp"
        android:theme="@style/Inner_Relative_Layout">

        <ImageView
            android:id="@+id/start_image_of_entertainment_quiz"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:contentDescription="@string/start_button_entertainment"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:src="@drawable/start_button_entertainment" />

        <ImageView
            android:id="@+id/play_button_entertainment"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/play_button_entertainment"
            android:src="@drawable/play_button_entertainment" />

        <TextView
            android:id="@+id/hey_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="58dp"
            android:paddingTop="9dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hey_user_name"
            android:layout_marginStart="58dp"
            android:paddingTop="3dp"
            android:text="@string/start_your_quiz"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relative_card_view_entertainment"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/entertainment_coming_soon_txt"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:src="@drawable/entertainment_coming_soon_img"
            tools:ignore="ContentDescription" />


    </LinearLayout>

</RelativeLayout>

