<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@android:color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/leaderboard_profile_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:src="@drawable/ramshek" />

    <TextView
        android:id="@+id/leaderboard_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/leaderboard_profile_picture"
        android:textSize="18sp"
        tools:text="Ramshek Kumar Rana" />

    <TextView
        android:id="@+id/leaderboard_total_xp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/leaderboard_user_name"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/leaderboard_profile_picture"
        tools:text="1299xp"/>

    <TextView
        android:id="@+id/leaderboard_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        tools:ignore="RelativeOverlap"
        tools:text="15" />


</RelativeLayout>