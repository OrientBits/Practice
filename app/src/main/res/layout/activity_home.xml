<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ActivityBackground"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/cardBackground">

                <TextView
                    style="@style/TextViewOfCardView"
                    android:text="@string/current_Affairs" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/cardBackground">

                <TextView
                    style="@style/TextViewOfCardView"
                    android:text="@string/mathematics" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/cardBackground">

                <TextView
                    style="@style/TextViewOfCardView"
                    android:text="@string/chemistry" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/cardBackground">

                <TextView
                    style="@style/TextViewOfCardView"
                    android:text="@string/biology" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/cardBackground">

                <TextView
                    style="@style/TextViewOfCardView"
                    android:text="@string/history" />
            </android.support.v7.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/cardBackground">

                <TextView
                    style="@style/TextViewOfCardView"
                    android:text="@string/computer" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/cardBackground">

                <TextView
                    style="@style/TextViewOfCardView"
                    android:text="@string/reasoning" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/cardBackground">

                <TextView
                    style="@style/TextViewOfCardView"
                    android:text="@string/physics" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/cardBackground">

                <TextView
                    style="@style/TextViewOfCardView"
                    android:text="@string/geography" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/HomeCardView"
                app:cardBackgroundColor="@color/cardBackground">

                <TextView
                    style="@style/TextViewOfCardView"
                    android:text="@string/entertainment" />
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </LinearLayout>
</ScrollView>