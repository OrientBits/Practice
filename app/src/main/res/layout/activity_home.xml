<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HomeActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="12">

        <include
            android:id="@+id/category_toolbar"
            layout="@layout/toolbar" />

            <LinearLayout
                android:id="@+id/profile_area"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="2dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/profile_picture_card_view"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:elevation="15dp"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/profile_picture"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="@string/profile_picture"
                        android:padding="2dp"
                        android:src="@drawable/profile_image"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/user_name"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold|normal" />

                <TextView
                    android:id="@+id/user_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/user_level"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="15sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ProgressBar
                        android:id="@+id/progress_bar_on_home"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="205dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:indeterminate="false"
                        android:max="100"
                        android:maxHeight="10dip"
                        android:minHeight="10dip"
                        android:progress="70"
                        android:progressDrawable="@drawable/progress_gradient" />

                    <TextView
                        android:id="@+id/progress_bar_XP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/level_xp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="7sp" />

                </FrameLayout>
            </LinearLayout>


        <GridLayout
            android:id="@+id/Category_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="10"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="5dp"
            android:rowCount="5">

            <!--Row 1-->
            <!--column 1-->
            <android.support.v7.widget.CardView
                android:id="@+id/current_affairs_card_view"
                style="@style/category_card_view"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="top"
                        android:elevation="0dp"
                        app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/current_Affairs"
                        android:scaleType="centerCrop"
                        android:src="@drawable/current_affairs"/>
                    </android.support.v7.widget.CardView>

                <TextView
                   style="@style/category_text_view"
                    android:text="@string/current_Affairs"
                    android:textColor="@color/current_affairs"/>


                </android.support.v7.widget.CardView>
            <!--column 2-->
            <android.support.v7.widget.CardView
                android:id="@+id/computer_card_view"
                style="@style/category_card_view"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="top"
                    android:elevation="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/computer"
                        android:scaleType="centerCrop"
                        android:src="@drawable/computer"/>
                </android.support.v7.widget.CardView>

                <TextView
                    style="@style/category_text_view"
                    android:text="@string/computer"
                    android:textColor="@color/computer"/>


            </android.support.v7.widget.CardView>

            <!--Row 2-->
            <!--column 1-->
            <android.support.v7.widget.CardView
                android:id="@+id/mathematics_card_view"
                style="@style/category_card_view"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="top"
                    android:elevation="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/mathematics"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mathematics"/>
                </android.support.v7.widget.CardView>

                <TextView
                    style="@style/category_text_view"
                    android:text="@string/mathematics"
                    android:textColor="@color/mathematics"/>


            </android.support.v7.widget.CardView>
            <!--column 2-->
            <android.support.v7.widget.CardView
                android:id="@+id/reasoning_card_view"
                style="@style/category_card_view"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="top"
                    android:elevation="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/reasoning"
                        android:scaleType="centerCrop"
                        android:src="@drawable/reasoning"/>
                </android.support.v7.widget.CardView>

                <TextView
                    style="@style/category_text_view"
                    android:text="@string/reasoning"
                    android:textColor="@color/reasoning"/>


            </android.support.v7.widget.CardView>

            <!--Row 3-->
            <!--column 1-->
            <android.support.v7.widget.CardView
                android:id="@+id/general_science_card_view"
                style="@style/category_card_view"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="top"
                    android:elevation="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/general_science"
                        android:scaleType="centerCrop"
                        android:src="@drawable/general_science"/>
                </android.support.v7.widget.CardView>

                <TextView
                    style="@style/category_text_view"
                    android:text="@string/general_science"
                    android:textColor="@color/general_science"/>


            </android.support.v7.widget.CardView>
            <!--column 2-->
            <android.support.v7.widget.CardView
                android:id="@+id/english_card_view"
                style="@style/category_card_view"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="top"
                    android:elevation="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/english"
                        android:scaleType="centerCrop"
                        android:src="@drawable/english"/>
                </android.support.v7.widget.CardView>

                <TextView
                    style="@style/category_text_view"
                    android:text="@string/english"
                    android:textColor="@color/english"/>


            </android.support.v7.widget.CardView>

            <!--Row 4-->
            <!--column 1-->
            <android.support.v7.widget.CardView
                android:id="@+id/technology_card_view"
                style="@style/category_card_view"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="top"
                    android:elevation="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/technology"
                        android:scaleType="centerCrop"
                        android:src="@drawable/technology"/>
                </android.support.v7.widget.CardView>

                <TextView
                    style="@style/category_text_view"
                    android:textColor="@color/technology"/>


            </android.support.v7.widget.CardView>
            <!--column 2-->
            <android.support.v7.widget.CardView
                android:id="@+id/sports_card_view"
                style="@style/category_card_view"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="top"
                    android:elevation="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/sport"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sport"/>
                </android.support.v7.widget.CardView>

                <TextView
                    style="@style/category_text_view"
                    android:textColor="@color/sport"/>


            </android.support.v7.widget.CardView>

            <!--Row 5-->
            <!--column 1-->
            <android.support.v7.widget.CardView
                android:id="@+id/special_card_view"
                style="@style/category_card_view"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="top"
                    android:elevation="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/special"
                        android:scaleType="centerCrop"
                        android:src="@drawable/special"/>
                </android.support.v7.widget.CardView>

                <TextView
                    style="@style/category_text_view"
                    android:text="@string/special"
                    android:textColor="@color/special"/>


            </android.support.v7.widget.CardView>
            <!--column 2-->
            <android.support.v7.widget.CardView
                android:id="@+id/entertainment_card_view"
                style="@style/category_card_view"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="top"
                    android:elevation="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/entertainment"
                        android:scaleType="centerCrop"
                        android:src="@drawable/entertainment"/>
                </android.support.v7.widget.CardView>

                <TextView
                    style="@style/category_text_view"
                    android:text="@string/entertainment"
                    android:textColor="@color/entertainment"/>


            </android.support.v7.widget.CardView>


        </GridLayout>
    </LinearLayout>
</ScrollView>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu" />
</android.support.v4.widget.DrawerLayout>

