<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HomeActivity">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ActivityBackground">
                <include
                    layout="@layout/toolbar"
                    android:id="@+id/toolbar" />

                <LinearLayout
                    android:id="@+id/profile_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:elevation="1dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_below="@id/toolbar">

                    <android.support.v7.widget.CardView
                        android:id="@+id/profile_picture_card_view"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:elevation="15dp"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:id="@+id/profile_picture"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:contentDescription="@string/profile_picture"
                            android:src="@drawable/ic_profile_picture_24dp" />
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/user_name"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/user_levl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/user_level"
                        android:textColor="@color/textColor"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="250dp"
                        android:layout_height="7dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/holo_blue_dark" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_area"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/ActivityBackground"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/current_affairs_card_view"
                            style="@style/HomeCardView"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardElevation="0dp">

                                <ImageView
                                    style="@style/ImageViewOnCardView"
                                    android:contentDescription="@string/current_Affairs"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/current_affairs" />
                            </android.support.v7.widget.CardView>

                            <TextView
                                style="@style/TextViewOfCardView"
                                android:text="@string/current_Affairs" />
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/mathematics_card_view"
                            style="@style/HomeCardView"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardElevation="0dp">

                                <ImageView
                                    style="@style/ImageViewOnCardView"
                                    android:contentDescription="@string/mathematics"
                                    android:src="@drawable/mathematics" />
                            </android.support.v7.widget.CardView>

                            <TextView
                                style="@style/TextViewOfCardView"
                                android:text="@string/mathematics" />
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/science_card_view"
                            style="@style/HomeCardView"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardElevation="0dp">

                                <ImageView
                                    style="@style/ImageViewOnCardView"
                                    android:contentDescription="@string/science"
                                    android:src="@drawable/science" />

                            </android.support.v7.widget.CardView>

                            <TextView
                                style="@style/TextViewOfCardView"
                                android:text="@string/science" />
                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:id="@+id/geography_card_view"
                            style="@style/HomeCardView"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardElevation="0dp">

                                <ImageView
                                    style="@style/ImageViewOnCardView"
                                    android:contentDescription="@string/geography"
                                    android:src="@drawable/mathematics" />

                            </android.support.v7.widget.CardView>

                            <TextView
                                style="@style/TextViewOfCardView"
                                android:text="@string/geography" />
                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:id="@+id/technology_card_view"
                            style="@style/HomeCardView"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardElevation="0dp">

                                <ImageView
                                    style="@style/ImageViewOnCardView"
                                    android:src="@drawable/technology"
                                    android:contentDescription="@string/technology" />

                            </android.support.v7.widget.CardView>

                            <TextView
                                style="@style/TextViewOfCardView"
                                android:text="@string/technology" />
                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:id="@+id/special_card_view"
                            style="@style/HomeCardView"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardElevation="0dp">

                                <ImageView
                                    style="@style/ImageViewOnCardView"
                                    android:contentDescription="@string/special"
                                    android:src="@drawable/special" />
                            </android.support.v7.widget.CardView>

                            <TextView
                                style="@style/TextViewOfCardView"
                                android:text="@string/special" />
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/computer_card_view"
                            style="@style/HomeCardView"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardElevation="0dp">

                                <ImageView
                                    style="@style/ImageViewOnCardView"
                                    android:contentDescription="@string/computer"
                                    android:src="@drawable/computer" />

                            </android.support.v7.widget.CardView>

                            <TextView
                                style="@style/TextViewOfCardView"
                                android:text="@string/computer" />
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/reasoning_card_view"
                            style="@style/HomeCardView"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">


                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardElevation="0dp">
                                <ImageView
                                    style="@style/ImageViewOnCardView"
                                    android:contentDescription="@string/reasoning"
                                    android:src="@drawable/reasoning" />

                            </android.support.v7.widget.CardView>

                            <TextView
                                style="@style/TextViewOfCardView"
                                android:text="@string/reasoning" />
                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:id="@+id/english_card_view"
                            style="@style/HomeCardView"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardElevation="0dp">

                                <ImageView
                                    style="@style/ImageViewOnCardView"
                                    android:contentDescription="@string/english"
                                    android:src="@drawable/english" />
                            </android.support.v7.widget.CardView>

                            <TextView
                                style="@style/TextViewOfCardView"
                                android:text="@string/english" />
                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:id="@+id/history_card_view"
                            style="@style/HomeCardView"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardElevation="0dp">

                                <ImageView
                                    style="@style/ImageViewOnCardView"
                                    android:contentDescription="@string/history"
                                    android:src="@drawable/history" />
                            </android.support.v7.widget.CardView>

                            <TextView
                                style="@style/TextViewOfCardView"
                                android:text="@string/history" />
                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:id="@+id/sport_card_view"
                            style="@style/HomeCardView"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardElevation="0dp">

                                <ImageView
                                    style="@style/ImageViewOnCardView"
                                    android:contentDescription="@string/sport" />

                            </android.support.v7.widget.CardView>

                            <TextView
                                style="@style/TextViewOfCardView"
                                android:text="@string/sport" />
                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:id="@+id/entertainment_card_view"
                            style="@style/HomeCardView"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardElevation="0dp">

                                <ImageView
                                    style="@style/ImageViewOnCardView"
                                    android:contentDescription="@string/entertainment"
                                    android:src="@drawable/entertainment" />
                            </android.support.v7.widget.CardView>

                            <TextView
                                style="@style/TextViewOfCardView"
                                android:text="@string/entertainment" />
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>


    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu" />
</android.support.v4.widget.DrawerLayout>
