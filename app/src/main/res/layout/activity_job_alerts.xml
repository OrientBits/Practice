<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CurrentAffairsActivity">

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="362dp"
                android:layout_height="237dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/current_Affairs"
                android:src="@drawable/job_alert_image_background" />

            <TextView
                android:id="@+id/heading_on_job_alerts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="99dp"
                android:text="@string/job_alerts"
                android:theme="@style/Topic_Text_Style"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/subheading_on_job_alerts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading_on_job_alerts"
                android:layout_marginStart="16dp"
                android:text="Find latest jobs here"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/relative_card_view_current_affairs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subheading_on_job_alerts"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_layout_job_alerts_gradient"
                android:elevation="2dp"
                android:theme="@style/Inner_Relative_Layout">

                <ImageView
                    android:id="@+id/start"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:background="?android:selectableItemBackground"
                    android:src="@drawable/start_image_job_alerts"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/play_button_current_affairs"
                    android:layout_width="30dp"
                    android:layout_marginStart="11dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:contentDescription="play_icon_job_alerts"
                    android:src="@drawable/play_icon_job_alerts" />

                <TextView
                    android:id="@+id/hey_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="58dp"
                    android:paddingTop="9dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hey_user_name"
                    android:layout_marginStart="58dp"
                    android:paddingTop="3dp"
                    android:text="@string/start_your_quiz"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_card_view_current_affairs"
                android:background="@color/white">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_layout_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/simmer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include layout="@layout/simmer_layout" />

                        <include layout="@layout/simmer_layout" />

                        <include layout="@layout/simmer_layout" />

                        <include layout="@layout/simmer_layout" />

                        <include layout="@layout/simmer_layout" />

                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/current_affairs_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="NestedScrolling" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/le_quiz_error_logo"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/lequiz_error_logo"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/empty_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/grayOnLearnSectionText"
                        android:textSize="28sp"


                        />

                    <TextView
                        android:id="@+id/error_message_no_internet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/grayOnLearnSectionText"
                        android:textSize="11sp"


                        />
                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

    <include layout="@layout/toolbar_layout" />

</android.support.design.widget.CoordinatorLayout>






