<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_drawer.JobAlertsActivity">

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/current_Affairs"
                android:src="@drawable/job_alert_image_background" />

            <TextView
                android:id="@+id/heading_on_job_alerts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="99dp"
                android:text="@string/job_alerts"
                android:theme="@style/Topic_Text_Style"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/subheading_on_job_alerts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading_on_job_alerts"
                android:layout_marginStart="16dp"
                android:text="Find latest jobs here"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:background="@color/white"
                tools:ignore="RelativeOverlap">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_layout_container_job_alert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/simmer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include layout="@layout/simmer_layout" />

                        <include layout="@layout/simmer_layout" />

                        <include layout="@layout/simmer_layout" />

                        <include layout="@layout/simmer_layout" />

                        <include layout="@layout/simmer_layout" />

                        <include layout="@layout/simmer_layout" />


                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/current_affairs_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="NestedScrolling" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/le_quiz_error_logo"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/lequiz_error_logo"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/empty_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/grayOnLearnSectionText"
                        android:textSize="28sp"


                        />

                    <TextView
                        android:id="@+id/error_message_no_internet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/grayOnLearnSectionText"
                        android:textSize="11sp"


                        />
                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

    <include layout="@layout/toolbar_layout" />

</android.support.design.widget.CoordinatorLayout>






